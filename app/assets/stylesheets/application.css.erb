@font-face {
    font-family: 'customfonts';
    src: url('<%= font_path('fonts/Jameel2.ttf') %>') format('truetype');
    font-weight: normal;
    font-style: normal;
}

.ur-font {
    font-family: customfonts;
    font-size: medium;
}

.ur-rtl {
    direction: rtl;
    font-family: customfonts;
    font-size: medium;
}

.table-responsive {
    padding-left: 14px;
    padding-right: 14px;
}

.breadcrumb {
    background-color: #ffffff;
    font-size: small;
}

.panel-title {
    color: #595959;
}

.header-div {
    position: relative;
    height: 50px;
    color: #848484;
    margin-left: 20px;
    margin-right: 20px;

}

.header-text {
    position: absolute;
    font-size: x-large;
    left: 10px;
    top: 10px;
}

.breads {
    position: absolute;
    left: 120px;
    top: 10px;
}

.create {
    position: absolute;
    right: 10px;
    top: 10px;

}

.delete {
    position: absolute;
    right: 50px;
    top: 10px;

}

.row-div {
    background-color: #dddddd;
    border-radius: 5px;
    padding: 3px;
    position: relative;
    margin: 4px;

}

.row-div-header {
    border-radius: 5px;
    padding: 3px;
    position: relative;
    margin: 4px;

}

.name-div {
    padding-bottom: 5px;
}

.urname-div {
    padding-bottom: 10px;
}

.control-div {
    position: absolute;
    right: 5px;
    top: 3px;

}

.row-div-inner {
    display: none;
    margin: 4px;
}

.row-div:hover .row-div-inner {
    display: block;
}

.row-div:hover {
    background-color: #c5c5c5;
}

.page-header {
    padding-bottom: 2px;
    margin: 5px 0 5px;
    border-bottom: 1px solid #eee;
    font-weight: bold;
}

#show {
    padding: 10px;
    margin: 10px 4px 0px 4px;

}

.heading-color {
    color: #595959;
    font-size: large;
}
.footer-bg{
     background-color: #34350B;

}

.col-remove-padding{
    padding-right: 0px;
    padding-left: 0px;
}
