<div class="header-div">
  <div class="row">
    <div class="col-sm-6">
      <div class="header-text">Teachers</div>


    </div>

    <div class="col-sm-4 pull-right">
      <div class="create">
        <%= link_to new_teacher_path, class: 'btn btn-primary pull-right', "data-toggle" => "modal", "data-target" => '#teachers', :remote => true do %>
            <i class="fa fa-plus"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <i class="fa fa-list"></i>
      Teachers List
    </h3>
  </div>
  <div class="panel-body">
    <div class="row row-div-header bg-primary hidden-xs">
      <div class="col-sm-6 ur-font">Teachers Name (اساتذہ کا نام)</div>

    </div>
    <% @teachers.each do |teacher| %>
        <div class="row row-div">
          <div class="col-md-12">
            <div class="name-div">
              <%= teacher.name %>
            </div>
            <div class="urname-div ur-font">
              <%= teacher.urname %>
            </div>
            <div class="row row-div-inner">


              <%= link_to edit_teacher_path(teacher), class: "btn btn-primary btn-xs", "data-toggle" => "modal", "data-target" => '#teachers', :remote => true do %>
                  <i class="fa fa-pencil"></i>
              <% end %>
              <%= link_to teacher, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger btn-xs", "data-toggle" => "modal", "data-target" => '#teachers' do %>
                  <i class="fa fa-minus-square-o"></i>
              <% end %>
              <div class="pull-right">
                <%= link_to teacher_path(teacher), class: 'btn btn-primary btn-xs ', "data-toggle" => "modal", "data-target" => '#teachers-detail', :remote => true do %>
                    <i class="fa fa-expand"></i>
                <% end %>
              </div>

            </div>
          </div>
        </div>
    <% end %>

  </div>
</div>


<!--display form modal-->
<div class="modal fade" role="dialog" aria-labelledby="gridSystemModalLabel" aria-hidden="true" id="teachers">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        Teachers
      </div>
      <div class="modal-body">
        <!-- to sho form-->
        <div id="show"></div>

      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>
  <!-- /.modal -->
</div>
<!-- end display form-->

<!--display form modal-->
<div class="modal fade" role="dialog" aria-labelledby="gridSystemModalLabel" aria-hidden="true" id="teachers-detail">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        Teachers
      </div>
      <div class="modal-body">
        <!-- to sho form-->
        <div id="show-detail"></div>

      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>
  <!-- /.modal -->
</div>
<!-- end display form-->