<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default transparent">
      <div class="panel-heading" style="background-color: #c5af59">
        <h3 class="panel-title">
          <i class="fa fa-list"></i>
        Teachers' Qualifications
        </h3>
      </div>

      <div class="panel-body panel-bg">

        <div class=" row thaed-bt hidden-xs hidden-sm">
          <div class="col-md-6 col-sm-6">Course Name</div>
          <div class="col-md-6 col-sm-6">Institution</div>
        </div>
        <% @teachers.each do |t| %>
            <div class=" row teacher-bg">
              <div class="col-md-12"> <%= t.name %></div>
            </div>
            <% t.courses.ordered.each do |c| %>
                <div class="row data-row2 ">
                  <div class="col-md-6 ">
                    <%= c.coursename %>
                  </div>
                  <div class="col-md-2 small-heading visible-xs visible-sm" style="margin-left: 0px;">Institution:</div>
                  <div class="col-md-6 ">
                    <%= c.school %></div>
                </div>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>





