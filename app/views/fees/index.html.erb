
<div class="header-div">
  <div class="row">
    <div class="col-sm-6">
      <div class="header-text">Fees and Plans</div>


    </div>

    <div class="col-sm-4 pull-right">
      <div class="create">
        <%= link_to new_fee_path, class: 'btn btn-primary pull-right',"data-toggle"=>"modal","data-target"=>"#fee", :remote => true do %>
            <i class="fa fa-plus"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <i class="fa fa-list"></i>
      Fees And Plan List
    </h3>
  </div>
  <div class="panel-body">
    <div class="row row-div-header bg-primary hidden-xs">
      <div class="col-sm-2 ur-font">Plan (منصوبہ)</div>
      <div class="col-sm-2 ur-font"><div>Duration/day</div><div> (روزانہ دورانیہ)</div></div>
      <div class="col-sm-2 ur-font">Fees (فیس)</div>
    </div>
    <% @fees.each do |fee| %>
        <div class="row row-div">
          <div class="col-sm-3 ur-font">
            <%= fee.plan %> (<%= fee.urplan %>)
          </div>
          <div class="col-sm-2 ur-font">
            <%= fee.duration %> (<%= fee.urduration %>)
          </div>
          <div class="col-sm-2">
            <%=number_to_currency fee.feeamount %>
          </div>
          <div class="row row-div-inner">
            <div class="pull-right">

              <%= link_to edit_fee_path(fee), class: "btn btn-primary btn-xs","data-toggle"=>"modal","data-target"=>"#fee", :remote => true do %>
                  <i class="fa fa-pencil"></i>
              <% end %>


              <%= link_to fee, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-xs' do %>
                  <i class="fa fa-minus-square-o"></i>
              <% end %>

            </div>
          </div>
        </div>
    <% end %>


  </div>
</div>


<!--display form modal-->
<div class="modal fade" role="dialog" aria-labelledby="gridSystemModalLabel" aria-hidden="true" id="fee">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        Fees and Plans
      </div>
      <div class="modal-body">
        <!-- to sho form-->
        <div id="show"></div>

      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>
  <!-- /.modal -->
</div>
<!-- end display form-->


