<div class="col-sm-offset-4 col-sm-4">
<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">
    <i class="fa fa-lock"></i>
    <%= t('.sign_in', :default => "Sign in") %>
    </h1>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form" }) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <%= f.email_field :email,:placeholder=>'Email', autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        <%= f.password_field :password,:placeholder=>'Password', autocomplete: "off", class: "form-control" %>
          </div>
      </div>
        <div class="text-right">
          <button type="submit" class="btn btn-primary"><i class="fa fa-key"></i> Login</button>
        </div>
    <% end %>
  </div>
</div>

</div>
