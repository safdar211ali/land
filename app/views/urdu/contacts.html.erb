<div class="row text-right">
  <div class="col-md-12">
    <div class="panel panel-default transparent">
      <div class="panel-heading " style="background-color: #c5af59">
        <h3 class="panel-title" style="font-weight: bold;font-size: large;">

          ایڈریس
          <i class="fa fa-list"></i>
        </h3>
      </div>
      <div class="panel-body panel-bg">
        <div class=" row thaed-bt hidden-sm hidden-xs">
          <div class="col-md-6 col-lg-6" style="font-weight: bold;font-size: large;">ایڈریس</div>
          <div class="col-md-6 col-lg-6" style="font-weight: bold;font-size: large;">ایڈریس کی قسم</div>
        </div>
        <% @teachers.each do |t| %>
            <div class=" row teacher-bg">
              <div class="col-md-12" style="font-size: large;"> <%= t.urname %></div>
            </div>

            <% t.contacts.each do |c| %>
                <!-- larger screen-->
                <div class="row data-row2 visible-lg visible-md">
                  <div class="col-md-6 col-lg-6" style="font-size: large;">
                    <%= c.contact %>
                  </div>
                  <div class="col-md-6 col-lg-6 " style="font-size: large;">
                    <%= c.urcontactname %>
                  </div>
                </div>
                <!--smaller screen-->
                <div class="row data-row2 visible-xs visible-sm">
                  <div class="col-md-6  " style="font-size: medium;">
                    <%= c.contact %>  <b class="small-heading " style="margin-left: 10px;">:<%= c.urcontactname %> </b>
                  </div>
                 </div>
            <% end %>

        <% end %>
      </div>
    </div>
  </div>
</div>


