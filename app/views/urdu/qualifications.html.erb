<div class="row text-right">
  <div class="col-md-12">
    <div class="panel panel-default transparent">
      <div class="panel-heading " style="background-color: #c5af59">
        <h3 class="panel-title" style="font-weight: bold;font-size: large;">

         اساتذہ کی  تعلیمی قابلیت
          <i class="fa fa-list"></i>
        </h3>
      </div>
      <div class="panel-body ur-rtl panel-bg">

        <div class=" row thaed-bt hidden-sm hidden-xs">
          <div class="col-md-6 col-lg-6" style="font-weight: bold;font-size: large;">ادارہ</div>
          <div class="col-md-6 col-lg-6" style="font-weight: bold;font-size: large;">کورس کا نام</div>
        </div>
        <% @teachers.each do |t| %>
            <div class="row teacher-bg">
              <div class="col-md-12" style="font-size: large;"><%= t.urname %></div>
            </div>
            <% t.courses.ordered.each do |c| %>
                <!-- larger screens-->
                <div class="row data-row2 visible-lg visible-md">
                  <div class="col-md-6 col-lg-6 " style="font-size: large;">
                    <%= c.urschool %>
                  </div>
                  <div class="col-md-6 col-lg-6 " style="font-size: large;">
                    <%= c.urcoursename %>
                  </div>
                </div>

                <!--smaller screens-->
                <div class="row data-row2 visible-xs visible-sm">
                  <div class="col-md-6 " style="font-size: large;">
                    <%= c.urcoursename %>
                  </div>
                  <div class="col-md-6 " style="font-size: large;">
                    <b class="small-heading " style="margin-left: 10px;"> <%= 'ادارہ:' %> </b> <%= c.urschool %>
                  </div>
                </div>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>


